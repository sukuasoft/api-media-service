        }
      }
    }, 

    "/api/v1/files/{id}": {
      "get": {
        "summary": "Pegar ficheiro carregado",

        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID do usuário",
            "schema": {
              "type": "string"
            }
          }],
      
        "responses": {
          "200": {
            "description": "Ficheiro carregado",
            "content": {
              "application/json": {
                "example": {
                  "sucess": true,
      
                  "data":
                    {
                        "id": "a8ab667c-149d-4970-887e-ce83056aabfd",
